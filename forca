import random

def salvar_palavras():
    nova_palavra = input("Digite a palavra nova:").upper()
    dica = input("Digite a dica:").upper()
    with open("banco_dados.txt","a") as arquivo:
        arquivo.write(f"{nova_palavra} {dica}\n")
        
def escolher_palavras():
    with open("banco_dados.txt","r") as arquivo:
        linhas = arquivo.readlines()
        if linhas:
            linhas_aleatoria = random.choice(linhas)
            palavra, dica = linhas_aleatoria.strip().split()
            return palavra, dica
        else:
            return None
    
palavra_secreta, dica = escolher_palavras()
letras_acertadas = [False] *len(palavra_secreta)
tentativas = 0
def chute():
    
    for(i, letra in enumerate(palavra_secreta)):
        if palavra_secreta:
            print(palavra_secreta[i],end =' ')
        else:
            print("_",end=' ')
    
    chute = input("Chute uma letra:").upper()
    
    if(chute in palavra_secreta):
        for i, letra in enumerate(palavra_secreta):
            if(letra == chute):
                letras_acertadas[i] = True
                print("Acertou a letra!")
    else:
        tentativas+= 1
        print("NÃ£o acertou!")
        
